@import 'constants.styl'

.home
  &:before
    content: ''
    position: absolute
    top: 20px
    left: 10px
    right: 10px
    bottom: 10px
    opacity: 0.03
    background: url(/static/images/logo.png) no-repeat 50% 50%
    background-size: cover
    z-index: -1
  .brand
    width: 100%
    max-width: 300px
  .item
    position: relative
    padding-left: 30px
    &:before
      content: ''
      position: absolute
      top: 5px
      left: 10px
      width: 10px
      height: 10px
      border-radius: 50%
      background-color: color-orange

  .hint
    color: color-gray
    padding: 10px

  section
    padding: 10px 0

  .schedule
    overflow: scroll
  .table
    border-collapse: collapse
    min-width: 100%
    .header
      .time
        text-align: center
        width: 50px
        svg
          fill: color-orange

      .hItem
        font-weight: 600
        color: color-font--light
        cursor: pointer
        transition: background-color 0.2s
        box-sizing: border-box
        text-align: center
        &:hover
          box-shadow:inset 0 0 0 1px lighten(color-menu, 5)
          background-color: lighten(color-menu, 5)

        &.active
          background-color: color-menu
          box-shadow:inset 0 0 0 1px lighten(color-orange, 20)


    .row
      &:nth-child(2n + 1)
        background: rgba(color-brown--light, .05)

    .cellTime
      color: color-orange
      text-align: center

    .cell
      font-size: 11px
      padding: 5px
      .cellItem
        margin: 10px 0
        padding: 10px
        text-align: center
        box-sizing: border-box
        box-shadow: box-shadow
        border-radius: 6px
        cursor: pointer
        &:hover
          box-shadow: box-shadow--hover


      .category
        border-radius: 4px

      .ashtanga
        background-color: color-blue

      .fighting
        background-color: color-red

      .hatha
        background-color: color-green

      .time
        color: color-orange

      .master
        font-size: 14px
        font-weight: 300
        &.alternate
          span:first-child
            color: color-gray--light

          span:last-child
            color: color-blue

        &.disabled
          color: color-red

        &.blank
          color: color-gray--light
