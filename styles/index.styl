@import 'constants.styl'

.home
  &:before
    content: ''
    position: absolute
    top: 20px
    left: 10px
    right: 10px
    bottom: 10px
    opacity: 0.03
    background: url(/static/images/logo.png) no-repeat 50% 50%
    background-size: cover
  .brand
    width: 100%
    max-width: 300px
  .item
    position: relative
    padding-left: 30px
    &:before
      content: ''
      position: absolute
      top: 5px
      left: 10px
      width: 10px
      height: 10px
      border-radius: 50%
      background-color: color-orange

  .hint
    color: color-gray
    padding: 10px

  section
    padding: 10px 0
