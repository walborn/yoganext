@import './constants.styl';

main
  .rent
    padding-top: 20px
    .thesis
      display: inline-block
      font-size: 22px
      font-weight: 700
      color: color-orange
    .list
      padding-top: 10px
    .item
      position: relative
      padding-left: 30px
      &:before
        content: ''
        position: absolute
        top: 5px
        left: 10px
        width: 10px
        height: 10px
        border-radius: 50%
        background-color: color-orange
    .images
      padding-top: 20px
      font-size: 0
      > img
        width: 100%
        margin-bottom: 10px
        border-radius: 4px
        box-shadow: box-shadow

