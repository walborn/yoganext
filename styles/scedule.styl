@import './constants.styl'

main
  .schedule
    text-align: center
    .view
      max-width: 300px
      margin: 10px 0

    .day
      .header
        white-space: nowrap
        box-shadow: box-shadow
        .item
          display: inline-block
          box-sizing: border-box
          width: calc(100%/7)
          padding: 5px 0
          font-weight: 600
          color: color-font--light
          border-left: 0 none
          text-align: center
          outline: none
          cursor: pointer
          transition: background-color 0.2s
          &:first-child
            border-left: 1px solid color-gray--lightest
            border-top-left-radius: 4px
            border-bottom-left-radius: 4px

          &:last-child
            border-top-right-radius: 4px
            border-bottom-right-radius: 4px

          &:hover
            background-color: lighten(color-menu, 5)
            border: 1px solid lighten(color-menu, 5)

          &.active
            background-color: color-menu
            border: 1px solid lighten(color-orange, 20)



      .body
        width: 100%
        .item
          margin: 10px 0
          padding: 20px
          text-align: center
          box-sizing: border-box
          box-shadow: box-shadow
          border-radius: 6px
          cursor: pointer
          &:hover
            box-shadow: box-shadow--hover

        .category
          border-radius: 4px

        .ashtanga
          background-color: color-blue

        .fighting
          background-color: color-red

        .hatha
          background-color: color-green


        .time
          color: color-blue
          font-weight: 700

        .master
          font-size: 14px
          font-weight: 300
          &.alternate
            span:first-child
              color: color-gray--light
              text-decoration: line-through

            span:last-child
              color: color-blue


          &.disabled
            color: color-red

          &.blank
            color: color-gray--light

        .note
          color: color-orange
          
    .wrapper
      overflow: scroll
    .table
      border-collapse: collapse
      min-width: 100%
      .header
        .time
          text-align: center
          width: 50px
          svg
            fill: color-orange

        .item
          font-weight: 600
          color: color-font--light
          cursor: pointer
          transition: background-color 0.2s
          box-sizing: border-box
          &:hover
            box-shadow:inset 0 0 0 1px lighten(color-menu, 5)
            background-color: lighten(color-menu, 5)

          &.active
            background-color: color-menu
            box-shadow:inset 0 0 0 1px lighten(color-orange, 20)


      .row
        &:nth-child(2n + 1)
          background: rgba(color-brown--light, .05)

      .cellTime
        color: color-orange
        text-align: center

      .cell
        font-size: 11px
        padding: 5px
        .cellItem
          margin: 10px 0
          padding: 10px
          text-align: center
          box-sizing: border-box
          box-shadow: box-shadow
          border-radius: 6px
          cursor: pointer
          &:hover
            box-shadow: box-shadow--hover


        .category
          border-radius: 4px

        .ashtanga
          background-color: color-blue

        .fighting
          background-color: color-red

        .hatha
          background-color: color-green

        .time
          color: color-blue

        .master
          font-size: 14px
          font-weight: 300
          &.alternate
            span:first-child
              color: color-gray--light
              text-decoration: line-through

            span:last-child
              color: color-blue

          &.disabled
            color: color-red

          &.blank
            color: color-gray--light

        .note
          color: color-orange






