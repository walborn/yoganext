@import './constants.styl'


  .contacts
    padding-right: 0
    .map
      margin-bottom: 20px
      box-shadow: box-shadow
      border-radius: 6px

    .list
      list-style: none
      margin: 10px 0
      padding: 20px
      box-shadow: box-shadow
      border-radius: 6px

    .item
      position: relative
      padding-left: 35px
      line-height: 30px
      > a
        text-decoration: none
        color: color-brown
      &:hover
        color: darken(color-blue, 20)
        > a
          color: color-brown--light
        svg
          fill-opacity: 1
        .whatsapp
          svg
            fill: color-whatsapp
        .viber
          svg
            fill: color-viber
        .telegram
          svg
            fill: color-telegram
        .location
          fill: color-red

        .phone
          fill: #4285f4

        .email
          fill: #dd4b39

        .vk
          fill: #45668e

        .insta
          fill: #c13584

        .fb
          fill: #3b5998

        .file
          fill: #34a853

    .whatsapp
    .viber
    .telegram
    .location
    .phone
    .email
    .vk
    .insta
    .fb
    .file
      position: absolute
      left: 0
      top: 5px
      width: 24px
      fill-opacity: .85
      fill: color-orange

    .whatsapp
      left: auto
      padding-left: 10px
      svg
        fill: color-orange
    .viber
      left: auto
      padding-left: 40px
      svg
        fill: color-orange
    .telegram
      left: auto
      top: 2px
      padding-left: 65px
      svg
        width: 30px;
        height: 30px;
        fill: color-orange
    .location:hover
      fill: color-red

    .phone:hover
      fill: #4285f4

    .email:hover
      fill: #dd4b39

    .vk:hover
      fill: #45668e

    .insta:hover
      fill: #c13584

    .fb:hover
      fill: #3b5998

    .file:hover
      fill: #34a853



  @media only screen and (min-width: 1000px)
    .contacts
      box-shadow: $box-shadow
      border-radius: 6px
      .list
      .map
        display: inline-block
        margin: 0
        box-shadow: none
        min-height: 350px
        vertical-align: top

      .list
        width: 40%

      .map
        width: 60%




