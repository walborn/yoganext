@import '../../styles/constants.styl'

.unlimited
  .info
  .form
    max-width: 500px
    margin: 0 auto

  .form > *
    margin-bottom: 10px

  .paragraph
    position: relative
    padding: 5px 30px
    &:before
      content: ''
      position:absolute
      top: 10px
      left: 10px
      width: 10px
      height: 10px
      border-radius: 50%
      background-color: orange


@media only screen and (max-width: 900px)
  .unlimited
    .info
    .form
      display: block
      width: 100%



