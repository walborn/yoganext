@import '../../styles/constants.styl'

.slider
  position: relative
  overflow: hidden
  background-color: color-gray--lightest
  .list
    //position: absolute
    list-style: none
    white-space: nowrap
    margin: 0
    padding: 0
    font-size: 0

    .item
      display: inline-block
      vertical-align: middle
      width: 100%
    img
      width: 100%

  .arrow
    position: absolute
    top: 50%
    transform: translateY(-50%)
    width: 30px
    height: 30px
    border-radius: 50%
    background-color: color-white
    cursor: pointer
    opacity: .2
    &:hover
      opacity: .4
    svg
      position: absolute
      width: 20px
      height: 20px
      top: 50%
      left: 50%

    &.left
      left: 20px
      svg
        transform: translate(-50%, -50%) rotate(180deg)
    &.right
      right: 20px
      svg
        transform: translate(-50%, -50%)
