  @media only screen and (max-width: 1000px)
    .location
      display: none
    .social
      padding-left: 45px

  @media only screen and (max-width: 780px)
    max-height: 50px
    .phone
      right: 60px
    .top
      box-shadow: 0 0 2px 0 rgba(0, 0, 0, 0.16)
    .menuRight.opened
      display: block
      right: RIGHT_MENU_WIDTH
    .menuBottom
    .menuInfo .menuInfoDesktop
      display: none

    .sandwich
      display: block
    .menuInfo .menuInfoMobile
      display: block
    .info
      background: color-menu



  @media only screen and (max-width: 500px)
    .social
      display: none
    .phone
      padding-left: 15px
      .image
        display: none

      .whatsapp,
      .viber
      .telegram
        padding-left: 5px
