@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&subset=cyrillic,latin-ext');
@import '../../static/styles/constants.styl';

html, body, #root {
  min-height: 100%;
  min-height: 100vh;
}

body {
  margin: 0;
  background: color-background
  color: color-font--light;
  font-family: 'Open Sans', sans-serif;
  font-size: 1rem;
}

*,
*:before,
*:after {
  box-sizing: border-box;
}

html {
  font-size: 100%;
}

body {
  display: flex;
  flex-direction: column;
  margin: 0;
  background: #fafbfe;
}

#application {
  width: 100%;
  font-size: 1rem;
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: 100%;
  min-height: 100vh;

  > main {
    flex: 1 1 auto;
    padding: 10px 0;
    > * {
      padding-left: 20px;
      padding-right: 20px;
    }
  }
}

h1, h2 {
  text-align: center;
  margin-bottom: 23px;
  line-height: 40px;
  color: color-orange
}

h1 {
  font-size: 44px;
}
h2 {
  font-size: 32px;
}
